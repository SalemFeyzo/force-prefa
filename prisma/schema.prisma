generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id         Int       @id @default(autoincrement())
  slug       String
  title      String
  content    String?
  images     Image[]
  locale     Locale?   @relation(fields: [localeId], references: [id])
  localeId   Int?
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
}

model Project {
  id         Int       @id @default(autoincrement())
  slug       String
  title      String
  content    String?
  images     Image[]
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?
  locale     Locale?   @relation(fields: [localeId], references: [id])
  localeId   Int?
}

model Image {
  id        Int      @id @default(autoincrement())
  title     String?
  periority String?
  image     String
  product   Product? @relation(fields: [productId], references: [id])
  productId Int?
  project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?
}

model Category {
  id       Int       @id @default(autoincrement())
  title    String
  products Product[]
  projects Project[]
}

model Locale {
  id       Int       @id @default(autoincrement())
  code     String
  products Product[]
  projects Project[]
}
